<:use Boilerplate>

<|Boilerplate(:title('Todo - test cromponent'), :htmx)>
	<?.base><base href="<.base>"></?>
	<table>
		<@.todos: $todo>
			<&HTML($todo)>
		</@>
	</table>
	<form
		hx-post="./todo"
		hx-target="table"
		hx-swap="beforeend"
		hx-on::after-request="this.reset()"
	>
		<input name=data><button type=submit>+</button>
	</form>
</|>
